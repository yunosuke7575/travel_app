<%# header %>
<div class="container">
<div class="row">
            <div class="col-lg-12">
                <h1 class="page-header pull-left">Guide
                </h1>
            </div>
        </div>
<%# header end%>

<%# main %>
<% @guides.each_slice(3) do |guides| %>
	<div class="row">
	<% guides.each do |guide| %>
	<div class="col-md-4 portfolio-item">
	<a href="#">
       <img class="img-responsive" src="http://placehold.it/700x400" alt="">
     </a>
		<h3> <%= link_to guide.title,guide %> </h3>
    	<p>	 <%= guide.content %> </p>
    </div>
    <% end %>
   </div>
<% end %>
</div>
<%# main end%>


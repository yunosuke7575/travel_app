<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
		<h1><%= @user.name %></h1>
		</div>
		<div class="col-md-2 col-md-offset-5">
		<p><%= image_tag(@user.image_url, class:"img-responsive img-circle")%></p>
		<br>
		</div>
		<div class="col-md-4 col-md-offset-4">
		<h1><%= "ガイド一覧" %></h1>
		</div>
	</div>
	


	<% @guides.each_slice(3) do |guides| %>
	<div class="row">
	<% guides.each do |guide| %>
	<div class="col-md-4 portfolio-item">
       <%= image_tag(guide.image_url, class:"img-responsive") %>
		<h3> <%= link_to guide.title,guide,id:"guide_hover" %> </h3>
    	<p>	 <%= guide.content.truncate(60) %> </p>
    </div>
    <% end %>
   </div>
<% end %>
</div>

<br>

<% if current_user.id == @user.id %>
	<div>
<%= link_to 'Edit', edit_user_path(current_user.id),id:"guide_hover"  %> 
	</div>
	<% end %>



<h1><%= link_to 'facebook', @user.get_link %></h1>


